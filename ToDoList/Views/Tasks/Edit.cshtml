@using static ToDoList.Models.Tasks;
@model Tasks


<h2>Edit Task</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Priority</label>
        <select class="form-control" asp-for="Priority">
            <option value="@nameof(PriorityEnum.Low)">Low</option>
            <option value="@nameof(PriorityEnum.Medium)">Medium</option>
            <option value="@nameof(PriorityEnum.High)">High</option>
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" class="form-control">
            <option value="@nameof(CategoryEnum.Work)">Work</option>
            <option value="@nameof(CategoryEnum.Personal)">Personal</option>
            <option value="@nameof(CategoryEnum.Home)">Home</option>
            <option value="@nameof(CategoryEnum.Finance)">Finance</option>
            <option value="@nameof(CategoryEnum.Shopping)">Shopping</option>
            <option value="@nameof(CategoryEnum.Travel)">Travel</option>
            <option value="@nameof(CategoryEnum.Health)">Health</option>
            <option value="@nameof(CategoryEnum.Other)">Other</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="IsCompleted" />
            <label class="form-check-label" asp-for="IsCompleted">
                Done
            </label>
        </div>
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>


@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}