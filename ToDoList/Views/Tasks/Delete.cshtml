@using static ToDoList.Models.Tasks;
@model Tasks

<h2>Delete Task</h2>

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input disabled class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea disabled class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" disabled class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="Priority">Priority</label>
        <select disabled class="form-control" asp-for="Priority">
            <option value="@nameof(PriorityEnum.Low)">Low</option>
            <option value="@nameof(PriorityEnum.Medium)">Medium</option>
            <option value="@nameof(PriorityEnum.High)">High</option>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" disabled class="form-control">
            <option value="@nameof(CategoryEnum.Work)">Work</option>
            <option value="@nameof(CategoryEnum.Personal)">Personal</option>
            <option value="@nameof(CategoryEnum.Home)">Home</option>
            <option value="@nameof(CategoryEnum.Finance)">Finance</option>
            <option value="@nameof(CategoryEnum.Shopping)">Shopping</option>
            <option value="@nameof(CategoryEnum.Travel)">Travel</option>
            <option value="@nameof(CategoryEnum.Other)">Other</option>
        </select>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input disabled class="form-check-input" type="checkbox" asp-for="IsCompleted" />
            <label class="form-check-label" asp-for="IsCompleted">
                Done
            </label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

